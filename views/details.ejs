<%- include('./partials/header')%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/payment.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <title>Document</title>
</head>
<body>

   
    
<div class="container">
    <div id="Checkout" class="inline">
        <h1>Shipping Details</h1>

        <form action="/shipping-details" method="POST">
         
            <div class="expiry-date-group form-group mt-2 mb-2">
                <label for="First Name">First Name</label>
                <input id="ExpiryDate" class="form-control" type="text" required></input>
            </div>
            <div class="security-code-group form-group mt-2 mb-2">
                <label for="LastName">Last Name</label>
                <div class="input-container" >
                    <input id="SecurityCode" class="form-control" type="text"></input>    
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="address">Address</label>
                <!-- <input id="text" class="form-control" type="text" required></input> -->
                <textarea class="form-control" name="address" id="address"  rows="3" required></textarea>
            </div>
         
            <div class="form-group mb-3">
                <label for="country">Country</label>
                <input id="text" class="form-control" type="text" required></input>
            </div>
            <div class="input-group">
                <!-- <label for="zipcode">Zip Code</label> -->
                <input type="text" class="form-control" placeholder="Zip Code" required>
                <input type="text" class="form-control" placeholder="City" required>
                <input type="text" class="form-control" placeholder="State" required>

            </div>
            <button id="PayButton" class="btn btn-block btn-success submit-button w-100 mt-2" type="submit">
                <!-- <span class="submit-button-lock"></span> -->
                <span class="align-middle">Proceed to Pay</span>
            </button>
        </form>
    </div>
  </div>
</body>
</html>